#! /bin/bash

chmod +x files/textify
sudo cp files/textify /usr/local/bin/
sudo chown $USER:$USER /usr/local/bin/textify

chmod +x files/textify-*.jar
sudo cp files/textify-*.jar /usr/local/bin/
sudo chown $USER:$USER /usr/local/bin/textify-*.jar

sudo cp files/textify.svg /usr/share/icons/hicolor/scalable/apps/

cp files/textify.desktop $HOME/.local/share/applications/

